<h1>Listing organisers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Skype</th>
      <th>Description</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisers.each do |organiser| %>
      <tr>
        <td><%= organiser.name %></td>
        <td><%= organiser.surname %></td>
        <td><%= organiser.email %></td>
        <td><%= organiser.skype %></td>
        <td><%= organiser.description %></td>
        <td><%= organiser.event %></td>
        <td><%= link_to 'Show', organiser %></td>
        <td><%= link_to 'Edit', edit_organiser_path(organiser) %></td>
        <td><%= link_to 'Destroy', organiser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

