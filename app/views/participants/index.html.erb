<h1>Listing participants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Skype</th>
      <th>Is paid</th>
      <th>Is guest</th>
      <th>Description</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.surname %></td>
        <td><%= participant.email %></td>
        <td><%= participant.skype %></td>
        <td><%= participant.is_paid %></td>
        <td><%= participant.is_guest %></td>
        <td><%= participant.description %></td>
        <td><%= participant.event.id %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

